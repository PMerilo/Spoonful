@page "{Username}"
@model Spoonful.Pages.User.ChatModel
@{
}
<link href="~/css/chat.css" rel="stylesheet">
<div class="shadow-sm container-fluid rounded border col-10 d-flex flex-column" style="height: calc(100vh - 102px); ">
    <div class="row">
        <div class="col-xxl-3 col-sm-4 p-0 align-self-stretch">
            <div class="border-bottom border-end h-100">
                <div class="d-flex px-4 py-2 justify-content-center align-items-center h-100">
                    <div class="px-5 fs-5">
                        Chats
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-9 col-sm-8 p-0">
            <div class="border-bottom">
                <div class="d-flex px-4 py-2 align-items-center">
                    <div class="p-2">
                        <img class="rounded-circle img-fluid" width="40" src="@(string.IsNullOrEmpty(Model.TargetUser.User.ImageURL) ? "/images/people/avatar-1.png" : Model.TargetUser.User.ImageURL)" alt="">
                    </div>
                    <div class="px-5 fs-4 chat-name" id="username">@@@Model.TargetUser.User.UserName</div>
                    

                </div>
            </div>
        </div>
    </div>
    <div class="row flex-grow-1 overflow-auto">
        <div class="col-xxl-3 col-sm-4 p-0 border-end vstack overflow-auto" style="height:100%;">
            @foreach (var item in Model.OpenChats)
            {
                <a class="chat text-black" href='/User/Chat/@item.Id'>
                    <div class="hstack gap-4 p-3 position-relative">
                        <img class="rounded-circle img-fluid" width="60" src="@(string.IsNullOrEmpty(item.ImageURL) ? "/images/people/avatar-1.png" : item.ImageURL)" alt="">
                        <div class="d-flex flex-column justify-content-center flex-grow-1">
                            <span>@@@item.UserName</span>
                            @*<span class="text-truncate" style="max-width: 50%;">HI<i class="bi bi-check"></i>dwadwa</span>*@
                        </div>
                    </div>
                </a>
            }
            
        </div>
        <div class="col-xxl-9 col-sm-8 p-0 vstack" style="height:100%;">
            <div class="flex-grow-1 overflow-auto" id="chat-panel">
            </div>
            <div class="message-box border-top">
                <div id="chat-box" class=" d-flex p-2">
                    <input type="hidden" value="@Model.CurrentUser.UserName" id="sender"/>
                    <input id="messageInput" class="flex-grow-1 form-control" type="text" placeholder="Enter Message" required
                            autocomplete="off" />
                    <button id="sendButton" class="btn btn-primary ms-3">Send</button>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/js/chathub.js"></script>
}