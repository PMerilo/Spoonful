@page
@model Spoonful.Pages.Aaron.AddEntryModel
@{
    ViewData["Title"] = "Add Entry";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<div>
    <form id="addForm" method="post">
        <div class="modal-body">

            <div class="row mb-3">
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiaryEntry.userId" value="@Model.userIdvar" hidden />
                    <span asp-validation-for="DiaryEntry.userId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="DiaryEntry.Name"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiaryEntry.Name" />
                    <span asp-validation-for="DiaryEntry.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="DiaryEntry.Category"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiaryEntry.Category" />
                    <span asp-validation-for="DiaryEntry.Category" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="DiaryEntry.Purchase"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiaryEntry.Purchase" type="date" />
                    <span asp-validation-for="DiaryEntry.Purchase" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="DiaryEntry.Expiry"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiaryEntry.Expiry" type="date" />
                    <span asp-validation-for="DiaryEntry.Expiry" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a class="btn btn-secondary ms-2" href="/User/Grocery%20Tracker/Index?id=@Model.userIdvar">Return to Tracker</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}