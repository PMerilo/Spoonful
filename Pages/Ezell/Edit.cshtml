@page
@model Spoonful.Pages.Ezell.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Feedbackform</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Feedbackform.Id" />
            <div class="form-group">
                <label asp-for="Feedbackform.Feedbackstatus" class="control-label"></label>
                <select class="form-select" asp-for="Feedbackform.Feedbackstatus">
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Feedbackform.TitleFeedback" class="control-label"></label>
                <input asp-for="Feedbackform.TitleFeedback" class="form-control" />
                <span asp-validation-for="Feedbackform.TitleFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedbackform.MainFeedback" class="control-label"></label>
                <input asp-for="Feedbackform.MainFeedback" class="form-control" />
                <span asp-validation-for="Feedbackform.MainFeedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
