@page
@model Spoonful.Pages.Account.ResetPasswordModel
@{
}

<form method="post">

    <div class="form-outline mb-4">
        <input type="password" id="registerPassword" class="form-control" asp-for="Password" />
        <label class="form-label" asp-for="Password">Password</label>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-outline mb-4">
        <input type="password" id="registerRepeatPassword" class="form-control" asp-for="ConfirmPassword" />
        <label class="form-label" asp-for="ConfirmPassword">Repeat password</label>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <span class="text-danger">@Html.ValidationSummary(true)</span>
    <button type="submit" class="btn btn-primary w-100">Reset Password</button>
</form>