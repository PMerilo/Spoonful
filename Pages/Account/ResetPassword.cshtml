@page
@model Spoonful.Pages.Account.ResetPasswordModel
@{
}
<link rel="stylesheet" href="~/css/Account.css" />
<div class="signin-wrapper">
    <div class="sign-panels">
        <div class="recover-password">
            <div class="signin-title">
                <span>Reset Password</span>
                <p>Enter a new password</p>
            </div>

            <form method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" id="floatingInput" placeholder="Email Address">
                    <label asp-for="Password" style="padding-left:30px;" for="floatingInput"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingInput" placeholder="Email Address">
                    <label asp-for="ConfirmPassword" style="padding-left:30px;" for="floatingInput"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
                <span class="text-danger">@Html.ValidationSummary(true)</span>

                <button type="submit" class="btn-signin btn-password">Reset Password</button>
                <a asp-page="./login" class="btn-login btn-fade">
                    <i class="fa fa-long-arrow-left" aria-hidden="true"></i> Cancel
                    and go back to Login page
                </a>
            </form>
        </div>
    </div>
</div>
<form method="post">

    <div class="form-outline mb-4">
        <input type="password" id="registerPassword" class="form-control" asp-for="Password" />
        <label class="form-label" asp-for="Password">Password</label>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-outline mb-4">
        <input type="password" id="registerRepeatPassword" class="form-control" asp-for="ConfirmPassword" />
        <label class="form-label" asp-for="ConfirmPassword">Repeat password</label>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <span class="text-danger">@Html.ValidationSummary(true)</span>
    <button type="submit" class="btn btn-primary w-100">Reset Password</button>
</form>