@page
@model Spoonful.Pages.Account.ForgetPasswordModel
@{
}
<link rel="stylesheet" href="~/css/Account.css" />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Email" class="form-label"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
</form>
<div class="signin-wrapper">
    <div class="sign-panels">
        <div class="recover-password">
            <div class="signin-title">
                <span>Recover Password</span>
                <p>Enter in the username or email associated with your account</p>
            </div>

            <form method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="Email Address">
                    <label asp-for="Email" style="padding-left:30px;" for="floatingInput"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <a href="" class="btn-signin btn-password">Submit Reset</a>
                <a asp-page="./login" class="btn-login btn-fade">
                    <i class="fa fa-long-arrow-left" aria-hidden="true"></i> Cancel
                    and go back to Login page
                </a>
            </form>
        </div>
    </div>
</div>