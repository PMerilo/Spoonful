@page
@model Spoonful.Pages.Admin.SupportManagement.TicketingManagementModel
@{
	var i = 0;
	var u = 0;
	var e = 0;
	var sub = 0;
	var prod = 0;
	var mis = 0;
	var others = 0;
	foreach (var item in Model.tixMods){
		i += 1;

		if (item.Feedbackstatus != "Spam"){
			e += 1;
			if(item.Category == "Subscription"){
				sub += 1;
			}
			else if (item.Category == "Products and Services"){
				prod += 1;
			}
			else if (item.Category == "Miscellaneous"){
				mis += 1;
			}
			else {
				others += 1;
			}

			if (item.Feedbackstatus != "Pending")
			{
				u += 1;
			}
		}
	}
}
<style>
	body {
		margin-top: 20px;
		background: #eee;
	}

	.padding {
		padding: 10px;
	}

	/* GRID */
