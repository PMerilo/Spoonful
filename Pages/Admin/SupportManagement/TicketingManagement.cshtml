	}

	.bg-gray {
		background-color: #eaeaec !important;
	}

	.bg-black {
		background-color: #222222 !important;
	}
</style>
<div class="container">
<section class="content">
	<div class="row">
		<!-- BEGIN NAV TICKET -->
		<div class="col-md-3">
			<div class="grid support">
				<div class="grid-body">
					<h2>Browse</h2>
					
					<hr>
					
					<ul>
						<li class="active"><a href="#">Everyone's Issues<span class="float-end"> @i</span></a></li>
						<li><a href="#">Problem Threads<span class="float-end"></span></a></li>
					</ul>
					
					<hr>
					
					<p><strong>Categories</strong></p>
					<ul class="support-label">
						<li><a href="#"><span class="bg-blue">&nbsp;</span>&nbsp;&nbsp;&nbsp;Subscription<span class="float-end"> @sub</span></a></li>
							<li><a href="#"><span class="bg-red">&nbsp;</span>&nbsp;&nbsp;&nbsp;Products and Services<span class="float-end"> @prod</span></a></li>
						<li><a href="#"><span class="bg-yellow">&nbsp;</span>&nbsp;&nbsp;&nbsp;Miscellaneous<span class="float-end"> @mis</span></a></li>
						<li><a href="#"><span class="bg-black">&nbsp;</span>&nbsp;&nbsp;&nbsp;Others<span class="float-end"> @others</span></a></li>
					</ul>
				</div>
			</div>
		</div>
		<!-- END NAV TICKET -->
		<!-- BEGIN TICKET -->
		<div class="col-md-9">
			<div class="grid support-content">
				 <div class="grid-body">
					 <h2>Issues</h2>
					 
					 <hr>
					 
					 <div class="btn-group">
						<button type="button" class="btn btn-default active">@u Opened</button>
						<button type="button" class="btn btn-default">@e Entries</button>
					</div>
					 
					 <div class="btn-group">
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"> Sort: <strong>Newest</strong> <span class="caret"></span></button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<a class="dropdown-item" asp-page="./Spam">Spam</a>
					  </div>
					</div>
					
					<!-- BEGIN NEW TICKET -->
					
					<!-- END NEW TICKET -->
					 
					<div class="padding"></div>
					 
					<div class="row">
						<!-- BEGIN TICKET CONTENT -->
						<div class="col-md-12">
							<ul class="list-group fa-padding">
							@foreach (var item in Model.tixMods) {
								@if (item.Feedbackstatus != "Spam"){
											<li class="list-group-item" data-toggle="modal" data-bs-toggle="modal" data-bs-target="#myModal_@item.Id">
												<div class="media">
													@if (item.Feedbackstatus != "Resolved")
													{
														<i class="fa fa-question-circle pull-left"></i>

													}
													else
													{
														<i class="fa fa-check pull-left"></i>
													}
													<div class="media-body">
														<strong>@item.TitleFeedback</strong>
														@if (item.Feedbackstatus == "Pending")
														{
															<span class="badge badge-danger">PENDING</span>

														}
														else if (item.Feedbackstatus == "Ongoing")
														{
															<span class="badge badge-warning">ONGOING</span>
														}
														else
														{
															<span class="badge badge-success">RESOLVED</span>

														}
														<span class="number float-end"># @item.Id</span>
														<p class="info">@item.Category. Asked by <a href="#">@item.username,</a> @item.datetime <i class="fa fa-info-circle"></i> <a href="#">Expand</a></p>
													</div>
												</div>
											</li>
											<div class="modal fade" id="myModal_@item.Id" tabindex="-1" role="dialog" aria-labelledby="issue" aria-hidden="true">
												<div class="modal-wrapper">
													<div class="modal-dialog">
														<div class="modal-content">
															<div class="modal-header bg-blue">
																<h4 class="modal-title"><i class="fa fa-question-circle"></i> @item.TitleFeedback</h4>
															</div>
															<div class="modal-body">
																<div class="row">
																	<div class="col-md-2">
																		<img src="assets/img/user/avatar01.png" class="img-circle" alt="" width="50">
																	</div>
																	<div class="col-md-10">
																		<p>Issue <strong>#@item.Id</strong> asked by <a href="#">@item.username</a> @item.datetime</p>
																		<p>Category: @item.Category</p>
																		<p>@item.MainFeedback</p>
																	</div>
																</div>
																<div class="row support-content-comment">
																	<div class="col-md-10">
																		@if (item.answer != "test"){
																			<p>Posted by <a href="#">admin</a></p>
																			<p>@item.answer</p>
																		}
																		else{
																			<a asp-page="./Reply" asp-route-id="@item.Id"><span class="fa fa-reply"></span> &nbsp;Post a reply</a>
																		}
																		
																		
																	</div>
																</div>
															</div>
															<div class="modal-footer">
																@if (item.Feedbackstatus == "Resolved"){
																	<a type="button" asp-page="./MakingThread" asp-route-id="@item.Id" class="btn btn-success warning-btn-em flex-fill"><i class="fa fa-upload"></i> Upload to Problem Thread</a>

																}
																else{							
																	<a type="button" asp-page="./MakingSpam" asp-route-id="@item.Id" class="warning-btn-em flex-fill"><i class="fa fa-times"></i> Mark as Spam</a>

																}


																<button type="button" class="blue-btn" data-bs-dismiss="modal"><i class="fa fa-times"></i> Close</button>
															</div>
														</div>
													</div>
												</div>
											</div>
								}
								
							}

								
							</ul>

							<!-- BEGIN DETAIL TICKET -->
							
							<!-- END DETAIL TICKET -->
						</div>
						<!-- END TICKET CONTENT -->
					</div>
				</div>
			</div>
		</div>
		<!-- END TICKET -->
	</div>
</section>
</div>