@page
@model Spoonful.Pages.Admin.VoucherManagement.SentEmailsModel
@{
    ViewData["Title"] = "Sent Emails";
}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<h1 class="display-4">@ViewData["Title"]</h1>
<div class="card" style="padding:10px">
    <div class="card-body">
    <table class="table table-striped" id="emails-table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.emailList[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model.emailList[0].Subject)</th>
            <th>@Html.DisplayNameFor(model => model.emailList[0].HtmlContent)</th>
            <th>@Html.DisplayNameFor(model => model.emailList[0].vouchersId)</th>
        </tr>
        </thead>
        <tbody>
        @{
                    @foreach (var item in Model.emailList)
            {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Subject</td>
                            <td>@item.HtmlContent</td>
                            <td>@item.vouchersId</td>
                        </tr>
            }
        }
        </tbody>
    </table>
    <button class="light-btn-7"onclick="location.href='/Admin/VoucherManagement'">Go Back</button>
    </div>
</div>     
@section Scripts
{
    <script>
      $(document).ready(function () {
        const emails_table = document.getElementById('emails-table');
        let emailsTable = new simpleDatatables.DataTable(emails_table);
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>
}