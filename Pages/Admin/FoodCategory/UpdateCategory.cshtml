@page
@model Spoonful.Pages.Admin.FoodCategory.UpdateCategoryModel
@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3 display-6">Update Category - @Model.MyCategory.name</h2>
			<br />

		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">


			<label asp-for="@Model.MyCategory.name"></label>
			<input asp-for="@Model.MyCategory.name" class="form-control" value="@Model.MyCategory.name">
			<span asp-validation-for="@Model.MyCategory.name" class="text-danger"></span>
		</div>
		
		<div class="d-flex">
			<button type="submit" class="blue-btn flex-fill" style="width:150px;">Update</button>
			<a asp-page="Index" class="light-btn-a flex-fill" style="width:150px";> Back to List</a>
		</div>
	</div>
</form>

