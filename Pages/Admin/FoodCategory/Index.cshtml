@page
@model Spoonful.Pages.Admin.FoodCategory.IndexModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6" style="padding-left:30px;">
			
			<h2 class="text-primary display-6">Categories</h2>
		</div>


		<div class="col-6 text-end">
			<a asp-page="/Admin/FoodCategory/AddCategory" class="blue-btn-a">
				<i class="bi bi-menu-up"></i> &nbsp; Create New Category
			</a>

		</div>

	</div>

	<br />
	<br />


	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>#</th>
				<th>
					Category
				</th>
				<th>
					Action
				</th>

			</tr>
		</thead>

		<tbody>
			@foreach (var obj in Model.Categories)
			{
				<form method="post">
				<tr>

					<td>@obj.Id</td>
					<td>@obj.name</td>

					<td width="50%">
						<div class="w-75 btn-group" role="group">
							<a asp-page="/Admin/FoodCategory/UpdateCategory" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i>
							</a>

							<input asp-for="MyCategory.name" class="form-control" hidden value="@obj.name">
							<input asp-for="MyCategory.Id" class="form-control" hidden value="@obj.Id">

							<button class="btn btn-danger mx-2" type="submit">
								<i class="bi bi-trash-fill"></i>
							</button>
						</div>
					</td>
				</tr>
				</form>
			}
		</tbody>

	</table>
</div>

