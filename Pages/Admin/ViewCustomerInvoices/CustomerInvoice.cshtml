@page
@model Spoonful.Pages.Admin.ViewCustomerInvoices.CustomerInvoiceModel
@{
    Layout = "";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/admin.css" />

<style>
    .invoice-title h2, .invoice-title h3 {
        display: inline-block;
    }

    .table > tbody > tr > .no-line {
        border-top: none;
    }

    .table > thead > tr > .no-line {
        border-bottom: none;
    }

    .table > tbody > tr > .thick-line {
        border-top: 2px solid;
    }
</style>

<div class="container">
    <p class="text-center pt-5"><a href="javascript:window.print()" class="btn_1 gray"><i class="fa fa-fw fa-print"></i> Print this invoice</a></p>
    <div class="row">
        <div class="col-12">
            <div class="invoice-title pt-4">
                <h3>Invoice</h3><h3 class="float-right">Order # @Model.MyInvoice.Id</h3>
            </div>
            <hr>
            <div class="row">
                <div class="col-6">
                    <address>
                        <strong>Billed To:</strong><br>
                        @Model.MyInvoice.Name<br>

                    </address>
                </div>
                <div class="col-6 text-right">
                    <address>
                        <strong>Shipped To:</strong><br>
                        @Model.MyInvoice.Address
                    </address>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <address>
                        <strong>Payment Method:</strong><br>
                        Visa ending **** 4242<br>
                        @Model.MyInvoice.Email
                    </address>
                </div>
                <div class="col-6 text-right">
                    <address>
                        <strong>Date Of Payment:</strong><br>
                        @Model.MyInvoice.DateOfPayment<br><br>
                    </address>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="pt-4">
                <h5><strong>Order summary</strong></h5>
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <td><strong>Item</strong></td>
                                <td class="text-center"><strong>Price</strong></td>
                                <td class="text-center"><strong>Quantity</strong></td>
                                <td class="text-right"><strong>Totals</strong></td>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.MyInvoice.MenuPreference Plan <span style="color:dimgrey"> (@Model.MyInvoice.noOfRecipesPerWeek recipes per Week for @Model.MyInvoice.noOfPeoplePerWeek People, @Model.MyInvoice.noOfServingsPerPerson Servings Per Person) </span></td>
                                <td class="text-center">$@Model.MyInvoice.Cost</td>
                                <td class="text-center">1</td>
                                <td class="text-right">$@Model.MyInvoice.Cost</td>

                            </tr>

                            <tr>
                                <td class="thick-line"></td>
                                <td class="thick-line"></td>
                                <td class="thick-line text-center"><strong>Subtotal</strong></td>
                                <td class="thick-line text-right">$@Model.MyInvoice.Cost</td>
                            </tr>
                            <tr>
                                <td class="no-line"></td>
                                <td class="no-line"></td>
                                <td class="no-line text-center"><strong>Shipping</strong></td>
                                <td class="no-line text-right">FREE</td>
                            </tr>
                            <tr>
                                <td class="no-line"></td>
                                <td class="no-line"></td>
                                <td class="no-line text-center"><strong>Total</strong></td>
                                <td class="no-line text-right">$@Model.MyInvoice.Cost</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>